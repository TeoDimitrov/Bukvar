<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6c18c"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="41dp"
        android:gravity="center"
        android:text="В третото ниво малките ще се упражняват да свързват срички в по дълги думички."
        android:textAppearance="?android:attr/textAppearanceLarge">

    </TextView>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_level_3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="194dp"
        android:clickable="false"
        android:src="@drawable/owl" />

    <Button
        android:id="@+id/button_level_3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="@dimen/abc_dialog_fixed_width_major"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="Към нивото..."
        android:textSize="50px" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Ниво 3: Думички"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60px" />


</RelativeLayout>